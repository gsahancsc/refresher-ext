{
  "manifest_version": 3,
  "name": "Auto Refresh Text Finder",
  "version": "1.0",
  "description": "Refreshes page every 10 seconds until specific text is found, then plays a sound",
  "permissions": ["storage", "activeTab", "scripting", "offscreen", "cookies", "browsingData", "tabs"],
  "incognito": "spanning",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "picker.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["alert.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
